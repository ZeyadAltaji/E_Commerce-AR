@using E_CommerceAR.Extensions;

<div class="sidenav-header">
    <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
    <a class="navbar-brand m-0" href="https://localhost:7251/DealerAreas/Home/Index">
        <img src="~/images/logo.png" class="navbar-brand-img h-100" alt="main_logo">
        <span class="ms-1 font-weight-bold text-white">home sewet</span>
    </a>
</div>
<hr class="horizontal light mt-0 mb-2">
<div class="collapse navbar-collapse w-auto ps ps--active-x" id="sidenav-collapse-main">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-white active bg-gradient-primary"  >
                <div class="text-white text-center  @Html.Translate("ms-2","me-2") d-flex align-items-center justify-content-center">
                    <i class="material-icons opacity-10">dashboard</i>
                </div>
                <span class="nav-link-text ms-1">@Html.Translate("لوحة التحكم","Dashboard")</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white " asp-controller="Products" asp-action="Index"  >
                <div class="text-white text-center  @Html.Translate("ms-2","me-2") d-flex align-items-center justify-content-center">
                    <i class="material-icons opacity-10">table_view</i>
                </div>
                <span class="nav-link-text ms-1">@Html.Translate("المنتجات","Products")</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white "   asp-controller="Oders" asp-action="Index" >
                <div class="text-white text-center @Html.Translate("ms-2","me-2") d-flex align-items-center justify-content-center">
                    <i class="material-icons opacity-10">receipt</i>
                </div>
                <span class="nav-link-text ms-1">@Html.Translate("طلبات ","Orders")</span>
            </a>
        </li>
    </ul>
 </div>
 
<script>
    $(document).ready(function () {
        debugger
        $('.navbar-nav li').click(function () {
            $('.navbar-nav li .nav-link').removeClass('bg-gradient-primary');
            $('.navbar-nav li .nav-link').removeClass('active');

            $(this).find('.nav-link').addClass('bg-gradient-primary active');

            var url;
            if ($(this).hasClass('nav-item')) {
                if ($(this).index() === 0) {
                     window.location.assign('https://localhost:7251/DealerAreas/Home/Index');

                }
                else if ($(this).index() === 1) {
                    url = '/DealerAreas/Products/Index';

                 } else if ($(this).index() === 2) {
                    url = '@Url.Action("Index", "Orders", new { area = "DealerAreas" })';
                }  

                $('#ContainerDiv').html('');
                $('#ContainerDiv').load(url);
            }
        });
    });
</script>
@using E_CommerceAR.Extensions;

<div id="allProdictsDiv">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3 p-1">
                        <div class="col-md-12 d-flex">
                            <div class="col-md-10">
                                <h6 class="text-white text-capitalize ps-3">@Html.Translate("قائمة المنتجات","List Products")</h6>
                            </div>
                            <div class="col-md-2 text-end">
                                <button class="btn bg-gradient-info mb-0" onclick="addnewProducts()">
                                    @Html.Translate("اضافة جديد","Add new")
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0" id="ListProductsDiv">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $('#ListProductsDiv').html('');
    var url = '@Url.Action("ListProduct", "Products")';
    $('#ListProductsDiv').load(url);
    function addnewProducts() {
        $('#allProdictsDiv').html('');

        var url = '@Url.Action("AddNewProduct", "Products")';
        $('#allProdictsDiv').load(url);
 
    }
</script>